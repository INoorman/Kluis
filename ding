#include <Servo.h>

Servo kluisMotor;
int potpin = 160;
int val;

void setup() {
  // put your setup code here, to run once:
  
  kluisMotor.attach(9);
  
}

void loop() {
  // put your main code here, to run repeatedly:

  val = analogRead(potpin);
  val = map(val, 0, 1023, 0, 179);
  kluisMotor.write(val);
  delay(500);
}
